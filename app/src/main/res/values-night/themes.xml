<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme for dark mode -->
    <style name="Base.Theme.IllusionApp" parent="Theme.Material3.DayNight">
        <!-- General app colors for dark mode -->
        <item name="colorPrimary">@color/dark_snackbar_background</item>
        <item name="colorSecondaryContainer">@color/transparent</item>
        <item name="android:textColor">@color/bone_white</item>
    </style>

    <style name="Theme.IllusionApp" parent="Base.Theme.IllusionApp" />

    <!-- Snackbar style -->
    <style name="SnackbarTheme" parent="Widget.MaterialComponents.Snackbar.FullWidth">
        <item name="backgroundTint">@color/dark_snackbar_background</item>
        <item name="android:textColor">@color/dark_on_surface</item>
    </style>
</resources>
